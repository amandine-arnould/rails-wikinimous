<h1><%= @article.title %></h1>

<%= link_to "Edit article", edit_article_path(@article), class: "btn btn-primary" %>

<%= link_to "Delete article",
            article_path(@article),
            class: "btn btn-danger",
            method: :delete,
            data: { confirm: "Delete this article ?" }
%>

<p><%= @article.content %></p>

<%= link_to "Return to articles", articles_path, class: "btn btn-light" %>
